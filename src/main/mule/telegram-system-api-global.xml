            </tls:context>
        </http:listener-connection>
    </http:listener-config>
    <apikit:config name="telegram-system-api-config" api="resource::a33f23d5-1d66-4edc-937f-b275ecc37a3a:telegram-system-api:1.0.2:raml:zip:telegram-system-api.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
